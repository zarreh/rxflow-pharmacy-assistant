# Production Environment Configuration for RxFlow Pharmacy Assistant
# Copy this file to .env for production deployment

# Application Configuration
APP_NAME="RxFlow Pharmacy Assistant"
DEBUG=false
LOG_LEVEL=INFO

# LLM Configuration - OpenAI Only for Production
DEFAULT_LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Google API Key (optional, for enhanced location services)
GOOGLE_API_KEY=your_google_api_key_here

# Data Configuration
USE_MOCK_DATA=true

# Demo Configuration
DEMO_PATIENT_ID=patient_001
DEMO_INSURANCE_ID=BCBS_TX_001

# Vector Store Configuration (currently unused but ready for future features)
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_STORE_PATH=./data/vector_store