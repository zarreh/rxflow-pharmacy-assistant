# Production Environment Configuration for RxFlow Pharmacy Assistant
# Copy this file to .env and configure your production settings

# LLM Configuration - OpenAI for Production
DEFAULT_LLM_PROVIDER=openai

# OpenAI Configuration (Primary)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Google API Key (optional, for enhanced location services)
GOOGLE_API_KEY=your_google_api_key_here

# Application Configuration
APP_NAME="RxFlow Pharmacy Assistant"
DEBUG=false
LOG_LEVEL=INFO

# Mock Data Configuration
USE_MOCK_DATA=true

# Vector Store Configuration
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_STORE_PATH=./data/vector_store

# Patient Data (for demo purposes only)
DEMO_PATIENT_ID=patient_001
DEMO_INSURANCE_ID=BCBS_TX_001